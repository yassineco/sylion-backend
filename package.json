{
  "name": "sylion-backend",
  "version": "0.1.0",
  "description": "Backend principal de la plateforme SylionAI - Architecture multi-tenant WhatsApp-first avec IA et RAG",
  "main": "dist/app/server.js",
  "scripts": {
    "dev": "tsx watch src/app/server.ts",
    "build": "tsc -p tsconfig.build.json",
    "start": "node dist/app/server.js",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "type-check": "tsc -p tsconfig.build.json --noEmit",
    "type-check:test": "tsc -p tsconfig.test.json --noEmit",
    "db:generate": "drizzle-kit generate:pg",
    "db:push": "drizzle-kit push:pg",
    "db:migrate": "tsx src/db/migrate.ts",
    "db:migrate:test": "dotenv -e .env.test -- tsx src/db/migrate.ts",
    "db:studio": "drizzle-kit studio",
    "test": "NODE_ENV=test DISABLE_QUEUES=true jest",
    "test:unit": "NODE_ENV=test DISABLE_QUEUES=true jest test/unit",
    "test:integration": "NODE_ENV=test DISABLE_QUEUES=true jest test/integration",
    "test:watch": "NODE_ENV=test DISABLE_QUEUES=true jest --watch",
    "test:coverage": "NODE_ENV=test DISABLE_QUEUES=true jest --coverage",
    "test:ci": "NODE_ENV=test DISABLE_QUEUES=true jest --ci --coverage --watchAll=false",
    "test:ts": "tsc -p tsconfig.test.json --noEmit",
    "health": "curl http://localhost:3000/health",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up -d",
    "docker:prod": "docker-compose up -d",
    "create-demo-assistant": "tsx scripts/create-demo-assistant.ts",
    "simulate-webhook": "tsx scripts/simulate-webhook.ts",
    "dev:dryrun": "WHATSAPP_DRY_RUN=true npm run dev",
    "test:whatsapp:live": "WHATSAPP_LIVE_TEST=true tsx scripts/live-test-send.ts",
    "load:kb": "tsx scripts/loadKnowledgePack.ts",
    "test:gcp": "tsx scripts/test-gcp-auth.ts"
  },
  "keywords": [
    "sylion",
    "whatsapp",
    "ai",
    "rag",
    "fastify",
    "multi-tenant",
    "backend",
    "typescript"
  ],
  "author": "SylionTech",
  "license": "UNLICENSED",
  "private": true,
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "@fastify/cors": "^8.4.0",
    "@fastify/formbody": "^7.4.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/multipart": "^8.0.0",
    "@fastify/rate-limit": "^8.0.3",
    "@fastify/swagger": "^8.12.0",
    "@fastify/swagger-ui": "^2.0.0",
    "@google-cloud/storage": "^7.6.0",
    "@google-cloud/vertexai": "^0.4.0",
    "@neondatabase/serverless": "^0.7.2",
    "axios": "^1.6.2",
    "bcryptjs": "^2.4.3",
    "bullmq": "^4.15.0",
    "dotenv": "^16.3.1",
    "drizzle-kit": "^0.20.6",
    "drizzle-orm": "^0.29.1",
    "fastify": "^4.24.3",
    "google-auth-library": "^10.5.0",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "pino": "^8.16.2",
    "pino-pretty": "^10.2.3",
    "postgres": "^3.4.3",
    "redis": "^4.6.10",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.0",
    "@types/supertest": "^2.0.16",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "dotenv-cli": "^7.2.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "tsx": "^4.6.0",
    "typescript": "^5.3.2"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "tsx": {
    "tsconfig": "./tsconfig.json"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/SylionTech/sylion-backend.git"
  },
  "bugs": {
    "url": "https://github.com/SylionTech/sylion-backend/issues"
  },
  "homepage": "https://github.com/SylionTech/sylion-backend#readme"
}
