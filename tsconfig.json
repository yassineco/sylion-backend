{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    /* ================================
     * Editor Configuration (VS Code IntelliSense)
     * ================================
     * Used by: VS Code, IDE tooling
     * Includes both src/ and test/ for full IntelliSense support.
     */
    "noEmit": true,
    "types": ["node", "vitest/globals"]
  },
  "include": ["src/**/*", "test/**/*", "types/**/*"],
  "exclude": ["node_modules", "dist", "coverage", "docs"],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}